@model IEnumerable<NationalExamSystem.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "../Admin/layout.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />


<table class="table table-striped table-advance table-hover" style="margin-left:12%;">
        <tr>
            <th>
                <a href="@Url.Action("Create")" class="btn btn-info">Add New Category</a>
            </th>
        </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Img)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Img)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
