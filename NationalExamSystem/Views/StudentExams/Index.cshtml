<table class="table table-striped table-advance table-hover" style="margin-left:12%;width:auto">
  
    @if (Session["tec"] == null) { 
    <tr>
        <td>
            <a href="@Url.Action("Create")" class="btn btn-info">Add New Mark</a>
        </td>
    </tr>
    }
    
      <tr>
        <th>
            @Html.DisplayNameFor(model => model.Exam.ExamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mark)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Exam.ExamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mark)
        </td>

        @if (Session["tec"] == null)
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        }
    </tr>
}

</table>
