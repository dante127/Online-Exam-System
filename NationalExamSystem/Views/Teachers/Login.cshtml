<!-- Start Login
   ============================================= -->
<div class="login-area default-padding">
    <div class="container">
        <div class="row">
            @if (ViewBag.msg != null)
            {
                @ViewBag.msg
            }
            <div class="col-md-8 col-md-offset-2">
                <form action="@Url.Action("Login","Teachers")" method="post" id="login-form" class="white-popup-block">
                    <div class="col-md-8 login-custom">
                        <h4>Teacher Login </h4>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="form-group">


                                    <input class="form-control" name="Email" placeholder="Email*" type="email">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="form-group">
                                    <input class="form-control" name="Password" placeholder="Password*" type="password">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="row">
                                <button type="submit">
                                    Login
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End Login Area -->