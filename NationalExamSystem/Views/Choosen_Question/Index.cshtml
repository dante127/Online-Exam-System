@model IEnumerable<NationalExamSystem.Models.Choosen_Question>

@{
    ViewBag.Title = "Index";
    Layout = "../Admin/layout.cshtml";

}

<br />
<br />
<br />
<br />
<br />
<br />

<table class="table table-striped table-advance table-hover" style="margin-left:12%;">
    
    <tr>
        <td>
            <a href="@Url.Action("Create")" class="btn btn-info">Choose Question</a>
        </td>
    </tr>
    
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Exam.ExamName)
        </th>
        <th>
            Question
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Exam.ExamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question.Question1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
